@model UsuarioModel

@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="text-center">
    <h1 class="display-3">Editar Usuário</h1>
</div>


<div style="width: 700px;" class="ms-auto me-auto">

    <form asp-controller="Usuario" asp-action="Edit" method="post">

        <input type="hidden" asp-for="Id" />

        <div class="row mt-2 mt-md-5">

            <div class="col-md-6">
                <label for="inputEmail4">Nome</label>
                <input type="text" class="form-control" id="inputName" placeholder="Nome" asp-for=Name>
                @Html.ValidationMessageFor(x => x.Name)
            </div>

            <div class="col-md-6">
                <label for="inputEmail">E-mail</label>
                <input type="email" class="form-control" id="inputEmail" placeholder="Email" asp-for="Email">
                @Html.ValidationMessageFor(x => x.Email)
            </div>

        </div>
        <div class="row mt-4">
            <div class="form-group col-md-6">
                <label for="inputCellphone">Login</label>
                <input type="text" class="form-control" id="inputLogin" placeholder="Login" asp-for="Login" />
                @Html.ValidationMessageFor(x => x.Login)
            </div>
            <div class="form-group col-md-6">
                <label for="inputCellphone">Senha</label>
                <input type="password" class="form-control" id="inputPassword" placeholder="Senha" asp-for="Senha" />
                @Html.ValidationMessageFor(x => x.Senha)
            </div>
        </div>

        <div class=" text-center mt-3">
            <button type="submit" class="me-2 btn btn-primary">Atualizar</button>
            <a class="btn btn-danger" asp-controller="Usuario" asp-action="Index" role="button">Cancelar</a>
        </div>

    </form>
</div>